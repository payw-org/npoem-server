type Word {
    id: ID!,
    text: String!
}

type Poem {
    id: ID!,
    content: String!,
    timeSpent: Float!,
    word: Word!
}

type Query {
    poems: [Poem]
}

type Mutation {
    writePoem(entitySaveDto: PoemSaveRequestDto!): ID!
    registerWord(entitySaveDto: WordSaveRequestDto!): ID!
}

input PoemSaveRequestDto{
    content: String!
    timeSpent: Float!
    wordId: Long!
}

input WordSaveRequestDto{
    text: String!
}