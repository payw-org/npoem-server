type WordDictionary {
    id: ID!,
    word: String!
}

type Poem {
    id: ID!,
    content: String!,
    spentTime: Int!,
    word: WordDictionary!
}

type Query {
    poems: [Poem]
}

type Mutation {
    writePoem(input: PoemSaveRequestDto!): ID!
}

input PoemSaveRequestDto{
    content: String!
    spentTime: Int!
}