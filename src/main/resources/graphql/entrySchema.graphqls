type Word {
    id: ID!,
    text: String!
}

type Poem {
    id: ID!,
    content: String!,
    spentTime: Int!,
    word: Word!
}

type Query {
    poems: [Poem]
}

type Mutation {
    writePoem(entitySaveDto: PoemSaveRequestDto!): ID!
    registerWord(entitySaveDto: WordSaveRequestDto!): ID!
}

input PoemSaveRequestDto{
    content: String!
    spentTime: Int!
    word_id: Long!
}

input WordSaveRequestDto{
    text: String!
}